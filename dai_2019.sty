% create title
\providecommand{\maketitle}{}
\renewcommand{\maketitle}{%
  \par
  \begingroup
    \renewcommand{\thefootnote}{\fnsymbol{footnote}}
    \renewcommand{\@makefnmark}{\hbox to 0pt{$^{\@thefnmark}$\hss}}
    \long\def\@makefntext##1{\parindent 1em\noindent\hbox to 1.8em{\hss $\m@th ^{\@thefnmark}$}##1}
    \thispagestyle{empty}
    \twocolumn[\@maketitle]
    \@thanks
    \@notice
  \endgroup
  \setcounter{footnote}{0} 
  \let\maketitle\relax
  \let\thanks\relax
}

\providecommand{\@maketitle}{}
\renewcommand{\@maketitle}{%
  \vbox{%
    \hsize\textwidth
    \linewidth\hsize
    \centering
    {\LARGE\bf \@title\par}
    \vskip 0.1in \@minus 0.05in 
    \if@submission
    \begin{tabular}[t]{c}\large\bf\rule{\z@}{24\p@}
      Anonymous Author(s) \\
    \end{tabular}%
    \else
      \def\and{\unskip\enspace{\rm and}\enspace}% 
      \def\And{%
        \end{tabular}\hfil\linebreak[0]\hfil%
        \begin{tabular}[t]{c}\large\bf\rule{\z@}{24\p@}\ignorespaces}%
      \def\AND{%
        \end{tabular}\hfil\linebreak[4]\hfil%
        \begin{tabular}[t]{c}\large\bf\rule{\z@}{24\p@}\ignorespaces}%
      \begin{tabular}[t]{c}\large\bf\rule{\z@}{24\p@}\@author\end{tabular}%
    \fi
    \vskip 0.2in \@minus 0.075in
  }
}

